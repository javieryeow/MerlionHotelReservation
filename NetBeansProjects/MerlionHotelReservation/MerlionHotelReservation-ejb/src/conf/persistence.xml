<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MerlionHotelReservation-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/MerlionHotelReservation</jta-data-source>
    <class>entity.Customer</class>
    <class>entity.CustomerReservation</class>
    <class>entity.Employee</class>
    <class>entity.GuestRelationOfficer</class>
    <class>entity.OperationManager</class>
    <class>entity.Partner</class>
    <class>entity.ReservationDetails</class>
    <class>entity.Room</class>
    <class>entity.RoomRate</class>
    <class>entity.RoomType</class>
    <class>entity.SalesManager</class>
    <class>entity.SystemAdministrator</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
